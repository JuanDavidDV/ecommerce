<div class="h-16 w-full fixed top-0 bg-blue-400 z-50"> 
    <div class="max-w-7xl h-full w-full mx-auto flex items-center justify-between px-8"> 
        <%= link_to root_path, class: "flex items-end gap-1" do %>
            <%= image_tag("online-shopping.png", class: "w-10 object-cover") %>
            <span class="text-2xl text-yellow-100">RoR Ecommerce</span>
        <% end %>

        <div class="flex items-center gap-6">
            <div >
                <% if current_user %>
                    <%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-white" %>
                <% else %> 
                    <%= link_to "Login", new_user_session_path, class: "bg-green-500 text-white rounded-lg px-4 py-1 hover:bg-green-600" %> 
                    <%= link_to "Sign Up", new_user_registration_path, class: "text-white text-lg hover:text-yellow-400" %>  
                <% end %>
            </div>

            <%= link_to cart_path do %>
                <%= render "layouts/cart", cart: @current_cart %>
            <% end %>
        </div>
    </div>
</div>