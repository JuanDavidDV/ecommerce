<div id="add-to-cart" class="w-full flex">
    <% if @current_cart && @current_cart.products.where(id: @product.id).any? %>
        <div class="rounded-lg font-semi-bold p-4 text-center text-xl bg-gray-500 text-white w-full">
            Already in Cart
        </div>
    <% else %>
        <%= link_to "Add To Cart", cart_path(product_id: @product.id), class: "rounded-lg font-semi-bold p-4 text-center text-xl bg-blue-600 hover:bg-yellow-500/85 text-white w-full",
            data: { turbo_method: "post"} %>
    <% end %>
</div>