<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Top Products" %>  <!--Setups tap title to Products-->


    <h1 class="font-bold text-7xl text-center font-jersey text-sky-700 pb-8">Top Products</h1>

  <div id="products" class="min-w-full grid grid-cols-4 gap-6">
    <% @products.each do |product| %>
      <%= render product %>
    <% end %>
  </div>
</div>
